@model InsuranceManagement.Areas.Login.Models.Login
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            margin: 20pt !important;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css'
          media="screen" />

    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div style="max-width: 400px;">
            <h2 class="form-signin-heading">
                @*Login*@
            </h2>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
            </div>
            <br />
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
            </div>
            @*<div class="checkbox">
                @Html.Label("Remember Me", new { @for = "RememberMe" })
                @Html.CheckBoxFor(m => m.RememberMe)
            </div>*@
            <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
            <input type="submit" style="margin-top:20px;" value="Submit" class="btn btn-primary" />
            <br />
            <br />
            <div id="dvMessage" style="display:none" class="alert alert-danger">
                <strong>Error!</strong>
                <span>@ViewBag.Message</span>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }
</body>
</html>

